{
  "$schema": "https://v2.tauri.app/schema/config.json",
  "productName": "Pomodoro App",
  "version": "0.1.0",
  "identifier": "com.pomodoro.app",
  "app": {
    "windows": [
      {
        "title": "Pomodoro Timer",
        "width": 550,
        "height": 320,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}